{
  "name": "no-bump",
  "version": "0.4.0",
  "description": "A zero config bundler.",
  "main": "lib/index.cjs.js",
  "module": "lib/index.esm.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "rm -rf lib && ts-node src/cli.ts && mv lib/src/* lib && rm -rf lib/src",
    "test": "ava",
    "build:plugin": "ts-node plugins/build.ts",
    "e2e": "ts-node plugins/vue/__tests__/e2e.spec.ts"
  },
  "bin": {
    "bump": "./bin/bump.js"
  },
  "files": [
    "README.md",
    "lib",
    "bin"
  ],
  "keywords": [
    "bundler",
    "rollup"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/lodash.merge": "^4.6.7",
    "@types/node": "^17.0.40",
    "ava": "^4.3.1",
    "prettier": "^2.6.2",
    "rollup-plugin-dts": "^4.2.2",
    "ts-node": "^10.8.1",
    "tslib": "^2.4.0",
    "typescript": "^4.7.3"
  },
  "dependencies": {
    "@rollup/plugin-alias": "^3.1.9",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@swc/core": "^1.2.197",
    "@swc/helpers": "^0.3.17",
    "lodash.merge": "^4.6.2",
    "postcss": "^8.4.14",
    "rollup": "^2.75.5",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-swc3": "^0.3.0"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
